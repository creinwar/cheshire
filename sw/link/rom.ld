INCLUDE common.ldh

SECTIONS {
  /* Put all LOAD sections in one contiguous output section */
  .misc : {
    *(.text._start)
    *(.text)
    *(.text.*)
    *(.rodata)
    *(.rodata.*)
    *(.data)
    *(.data.*)
    *(.srodata)
    *(.srodata.*)
    *(.sdata)
    *(.sdata.*)
  } > spm AT>extrom

  .bulk : {
    *(.bulk)
    *(.bulk.*)
  } > dram

  /* BSS is not loaded, but initialized by CRT0 */
  . = ALIGN(32);
  __bss_start = .;
  .bss : {
    *(.bss)
    *(.bss.*)
    *(.sbss)
    *(.sbss.*)
  } > spm
  . = ALIGN(32);
  __bss_end = .;
}
